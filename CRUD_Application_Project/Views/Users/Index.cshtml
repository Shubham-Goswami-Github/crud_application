@model IEnumerable<CRUD_Application_Project.Models.User>

@{
    ViewData["Title"] = "Users List";
}

<div class="container my-5">
    <div class="card shadow-lg rounded-4 border-0 overflow-hidden">
        <!-- Card Header -->
        <div class="card-header bg-forest text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0">🌿 User Records 🌿</h3>
            <a asp-action="Create" class="btn btn-light btn-sm fw-semibold shadow-sm">+ Add New</a>
        </div>

        <!-- Card Body -->
        <div class="card-body bg-white p-3">
            <div class="table-responsive">
                <table class="table table-hover align-middle table-bordered text-center mb-0">
                    <thead class="table-forest text-white">
                        <tr>
                            <th>Full Name</th>
                            <th>Contact Number</th>
                            <th>Email</th>
                            <th>Password</th>
                            <th>Confirm Password</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="align-middle">
                                <td>@item.FullName</td>
                                <td>@item.ContactNumber</td>
                                <td>@item.Email</td>
                                <td>@item.Password</td>
                                <td>@item.ConfirmPassword</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-forest me-1">Edit</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-success me-1">View</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: #f0f5f0;
    }

    /* Forest Theme Colors */
    .bg-forest {
        background: linear-gradient(90deg, #2e8b57, #32cd32);
    }

    .table-forest {
        background: linear-gradient(90deg, #2e8b57, #228b22);
    }

    /* Table Styling */
    table.table-bordered th,
    table.table-bordered td {
        border: 1px solid #cce6cc;
    }

    table.table-hover tbody tr:hover {
        background: rgba(46, 139, 87, 0.1);
    }

    /* Buttons */
    .btn-outline-forest {
        border: 1px solid #2e8b57;
        color: #2e8b57;
        transition: all 0.3s ease;
    }

        .btn-outline-forest:hover {
            background: #2e8b57;
            color: white;
        }

    /* Card */
    .card {
        border-radius: 20px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.2);
        }

    /* Responsive */
    @@media (max-width: 768px) {
        .table-responsive

    {
        font-size: 0.85rem;
    }

    .card-header h3 {
        font-size: 1.2rem;
    }

    }
</style>
