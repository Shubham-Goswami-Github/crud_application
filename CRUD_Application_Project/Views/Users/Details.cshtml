@model CRUD_Application_Project.Models.User

@{
    ViewData["Title"] = "User Details";
}

<div class="container-fluid p-0 min-vh-100 d-flex align-items-center justify-content-center position-relative">

    <!-- Background Image -->
    <div class="bg-image"></div>

    <!-- Gradient Overlay -->
    <div class="position-absolute top-0 start-0 w-100 h-100"
         style="background: linear-gradient(to right, rgba(0, 50, 0, 0.5) 30%, rgba(255,255,255,0) 90%);">
    </div>

    <!-- Centered Details Card -->
    <div class="position-relative z-3 p-4 rounded-4 shadow-lg animate__animated animate__fadeInUp details-box">

        <h2 class="text-center mb-3 text-forest fw-bold animate__animated animate__fadeInDown">🌿 User Details 🌿</h2>
        <hr style="border-top: 2px solid #2e8b57; width: 60%; margin: 0 auto 20px auto;">

        <dl class="row mb-3">
            <dt class="col-sm-4 fw-semibold text-forest">Full Name:</dt>
            <dd class="col-sm-8">@Model.FullName</dd>

            <dt class="col-sm-4 fw-semibold text-forest">Contact Number:</dt>
            <dd class="col-sm-8">@Model.ContactNumber</dd>

            <dt class="col-sm-4 fw-semibold text-forest">Email:</dt>
            <dd class="col-sm-8">@Model.Email</dd>

            <dt class="col-sm-4 fw-semibold text-forest">Password:</dt>
            <dd class="col-sm-8">@Model.Password</dd>

            <dt class="col-sm-4 fw-semibold text-forest">Confirm Password:</dt>
            <dd class="col-sm-8">@Model.ConfirmPassword</dd>
        </dl>

        <div class="text-center mt-3">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-forest btn-sm me-2 hover-zoom">✏️ Edit</a>
            <a asp-action="Index" class="btn btn-outline-forest btn-sm hover-zoom">🔙 Back to List</a>
        </div>
    </div>
</div>

<link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: 'Poppins', sans-serif;
        background: #f0f5f0;
    }

    .bg-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url('https://github.com/Shubham-Goswami-Github/portfolio-images/raw/main/bg.jpg');
        background-size: cover;
        background-position: center;
        z-index: 0;
    }

    /* Details Card */
    .details-box {
        width: 400px;
        background: rgba(255, 255, 255, 0.97);
        border-radius: 20px;
        border: 2px solid #2e8b57;
        box-shadow: 0 12px 36px rgba(0,0,0,0.2);
        backdrop-filter: blur(5px);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .details-box:hover {
            transform: translateY(-4px);
            box-shadow: 0 18px 40px rgba(0,0,0,0.25);
        }

    /* Gradient Labels */
    .text-forest {
        background: linear-gradient(90deg, #006400, #2e8b57, #32cd32);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-size: 1rem;
    }

    /* Buttons */
    .btn-forest {
        background: linear-gradient(90deg, #2e8b57, #32cd32);
        color: white;
        border: none;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-forest:hover {
            transform: scale(1.05);
            background: linear-gradient(90deg, #228b22, #2e8b57);
            box-shadow: 0 6px 16px rgba(0,100,0,0.4);
        }

    .btn-outline-forest {
        color: #2e8b57;
        border: 2px solid #2e8b57;
        font-weight: 500;
        transition: all 0.3s ease;
    }

        .btn-outline-forest:hover {
            background: #2e8b57;
            color: white;
            transform: scale(1.05);
        }

    .hover-zoom {
        transition: transform 0.3s ease;
    }

        .hover-zoom:hover {
            transform: scale(1.08);
        }

    /* Responsive */
    @@media (max-width: 992px) {
        .details-box

    {
        width: 90%;
        margin: 0 auto;
    }

    }
</style>
