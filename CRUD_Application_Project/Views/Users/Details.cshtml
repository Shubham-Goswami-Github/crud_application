@model CRUD_Application_Project.Models.User

@{
    ViewData["Title"] = "User Details";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />

<div class="container-fluid p-0 min-vh-100" style="background: #f0f2f8;">

    <!-- Centered Card -->
    <div class="row justify-content-center py-5">
        <div class="col-lg-6 col-md-8 col-sm-10">
            <div class="card shadow-lg rounded-4 border-0 animate__animated animate__fadeInUp user-card">
                <div class="card-header bg-gradient text-white text-center rounded-top-4 py-3 animate__animated animate__fadeInDown">
                    <h2 class="mb-0"><i class="fas fa-user-circle me-2"></i> User Details</h2>
                </div>

                <div class="card-body px-4 py-4">
                    <dl class="row mb-3">
                        <dt class="col-sm-5 text-gradient fw-semibold">Full Name:</dt>
                        <dd class="col-sm-7">@Model.FullName</dd>

                        <dt class="col-sm-5 text-gradient fw-semibold">Contact Number:</dt>
                        <dd class="col-sm-7">@Model.ContactNumber</dd>

                        <dt class="col-sm-5 text-gradient fw-semibold">Email:</dt>
                        <dd class="col-sm-7">@Model.Email</dd>

                        <dt class="col-sm-5 text-gradient fw-semibold">Password:</dt>
                        <dd class="col-sm-7">@Model.Password</dd>

                        <dt class="col-sm-5 text-gradient fw-semibold">Confirm Password:</dt>
                        <dd class="col-sm-7">@Model.ConfirmPassword</dd>
                    </dl>

                    <div class="d-flex justify-content-center gap-3 mt-4">
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-gradient-green hover-zoom"><i class="fas fa-pen me-1"></i> Edit</a>
                        <a asp-action="Index" class="btn btn-outline-gradient-green hover-zoom"><i class="fas fa-arrow-left me-1"></i> Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Card Styling */
    .user-card {
        background: #fff;
        border-radius: 20px;
        border: none;
        box-shadow: 0 12px 36px rgba(0,0,0,0.18);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .user-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 18px 50px rgba(0,0,0,0.25);
        }

    /* Header Gradient */
    .bg-gradient {
        background: linear-gradient(90deg, #006400, #228B22, #32CD32);
        color: white;
        font-weight: 600;
    }

    .text-gradient {
        background: linear-gradient(90deg, #006400, #2e8b57, #32cd32);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    /* Buttons */
    .btn-gradient-green {
        background: linear-gradient(90deg, #228B22, #32CD32);
        color: white;
        font-weight: 500;
        border: none;
        transition: all 0.3s ease;
        padding: 0.5rem 1.3rem;
        border-radius: 50px;
    }

        .btn-gradient-green:hover {
            transform: scale(1.05);
            background: linear-gradient(90deg, #006400, #228B22);
            box-shadow: 0 6px 16px rgba(0,100,0,0.4);
        }

    .btn-outline-gradient-green {
        color: #228B22;
        border: 2px solid #228B22;
        font-weight: 500;
        border-radius: 50px;
        transition: all 0.3s ease;
        padding: 0.5rem 1.3rem;
    }

        .btn-outline-gradient-green:hover {
            background: #228B22;
            color: white;
            transform: scale(1.05);
        }

    /* Hover Zoom effect for all buttons */
    .hover-zoom {
        transition: transform 0.3s ease;
    }

        .hover-zoom:hover {
            transform: scale(1.08);
        }

    /* Responsive */
    @@media (max-width: 576px) {
        .user-card

    {
        padding: 0;
    }

    dl dt, dl dd {
        text-align: left;
    }

    }
</style>
