@model CRUD_Application_Project.Models.User

@{
    ViewData["Title"] = "Create User";
}

<div class="container-fluid min-vh-100 d-flex align-items-center justify-content-center bg-light">
    <div class="row w-100 shadow-lg rounded-4 overflow-hidden" style="max-width: 900px;">

        <!-- Left Image Section -->
        <div class="col-md-6 d-none d-md-block p-0">
            <img src="https://github.com/Shubham-Goswami-Github/portfolio-images/raw/main/bg.jpg"
                 alt="Background"
                 class="img-fluid h-100"
                 style="object-fit: cover;">
        </div>

        <!-- Right Form Section -->
        <div class="col-md-6 bg-white p-5">
            <h2 class="text-center mb-4 text-primary fw-bold">User Registration</h2>

            <form asp-action="Create" class="needs-validation" novalidate>
                <div class="form-group mb-3">
                    <label asp-for="FullName" class="form-label fw-semibold"></label>
                    <input asp-for="FullName" class="form-control form-control-lg rounded-3 shadow-sm" placeholder="Enter full name" />
                    <span asp-validation-for="FullName" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ContactNumber" class="form-label fw-semibold"></label>
                    <input asp-for="ContactNumber" class="form-control form-control-lg rounded-3 shadow-sm" placeholder="Enter contact number" />
                    <span asp-validation-for="ContactNumber" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label fw-semibold"></label>
                    <input asp-for="Email" class="form-control form-control-lg rounded-3 shadow-sm" placeholder="Enter email address" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Password" class="form-label fw-semibold"></label>
                    <input asp-for="Password" class="form-control form-control-lg rounded-3 shadow-sm" type="password" placeholder="Enter password" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="ConfirmPassword" class="form-label fw-semibold"></label>
                    <input asp-for="ConfirmPassword" class="form-control form-control-lg rounded-3 shadow-sm" type="password" placeholder="Confirm password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg rounded-pill shadow-sm">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
